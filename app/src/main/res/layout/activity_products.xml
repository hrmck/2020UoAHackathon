<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/personal_info" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shop_desp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="400dp"
            android:background="@color/white"
            android:maxHeight="150dp"
            android:minHeight="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/store_demo" />

            <TextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:textColor="@color/red"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ToggleButton
            android:id="@+id/toggleButton6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            app:layout_constraintBottom_toTopOf="@+id/toggleButton7"
            app:layout_constraintStart_toStartOf="@+id/toggleButton7"
            app:layout_constraintTop_toBottomOf="@+id/shop_desp" />

        <ToggleButton
            android:id="@+id/toggleButton8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            app:layout_constraintBottom_toTopOf="@+id/toggleButton9"
            app:layout_constraintStart_toStartOf="@+id/toggleButton9"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton7" />

        <ToggleButton
            android:id="@+id/toggleButton9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            app:layout_constraintBottom_toTopOf="@+id/toggleButton10"
            app:layout_constraintStart_toStartOf="@+id/toggleButton10"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton8" />

        <ToggleButton
            android:id="@+id/toggleButton10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/toggleButton9"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton9" />

        <ToggleButton
            android:id="@+id/toggleButton7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            app:layout_constraintBottom_toTopOf="@+id/toggleButton8"
            app:layout_constraintStart_toStartOf="@+id/toggleButton8"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton6" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productListView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginStart="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/toggleButton6"
            app:layout_constraintTop_toBottomOf="@id/shop_desp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/cartBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/bone"
        android:scaleType="fitCenter"
        android:src="@drawable/cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price calculation goes here!"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cartBtn"
        app:layout_constraintTop_toBottomOf="@+id/shop_products" />
</androidx.constraintlayout.widget.ConstraintLayout>